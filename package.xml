 </version>

 <stability>
  <release>alpha</release>
  <api>alpha</api>
 </stability>

 <license uri="http://www.gnu.org/licenses/lgpl.html">LGPL</license>

 <notes>
- Fix Safari bug
- Fix compatibility with HTML_QuickForm2 2.0.0RC1
 </notes>

 <contents>
  <dir name="/">
   <dir name="HTML">
    <dir name="QuickForm2">
     <dir name="Element">
      <file role="php" name="BackgroundText.php">
       <tasks:replace from="@version@" to="version" type="package-info" />
      </file>
     </dir>
    </dir>
   </dir>
   <dir name="docs">
    <dir name="examples">
     <file role="doc" name="demo-backgroundtext.php" />
    </dir>
   </dir>
  </dir>
 </contents>

 <dependencies>
  <required>
   <php>
    <min>5.2.0</min>
   </php>
